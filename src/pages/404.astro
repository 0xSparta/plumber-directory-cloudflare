---
import Layout from '../layouts/Layout.astro';

// SEO - noindex this page
const title = "Page Not Found | Plumber Near Me";
const description = "Sorry, the page you are looking for could not be found. Browse our plumber directory to find what you're looking for.";
---

<Layout
  title={title}
  description={description}
  noIndex={true}
>
  <div class="flex flex-col items-center justify-center py-16 text-center">
    <h1 class="text-6xl font-bold text-primary mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-6">Page Not Found</h2>
    <p class="text-lg max-w-md mb-8">Sorry, the page you're looking for doesn't exist or has been moved.</p>
    
    <div class="space-y-8 w-full max-w-md">
      <div class="card bg-base-200">
        <div class="card-body">
          <h3 class="card-title text-lg">Looking for a plumber?</h3>
          <p class="mb-4">Try browsing our directory by state to find plumbers in your area.</p>
          <a href="/state" class="btn btn-primary">Browse by State</a>
        </div>
      </div>
      
      <div class="flex gap-4 justify-center">
        <a href="/" class="btn btn-outline">Go Home</a>
        <a href="/contact" class="btn btn-outline">Contact Us</a>
      </div>
    </div>
  </div>
</Layout> 